<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44A9A7">

    <EditText
        android:id="@+id/updatetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Update Title"
        android:inputType="text"
        android:textColor="#0D0000"
        android:textColorHighlight="#0D0000"
        android:textColorHint="#0D0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBaseline="5dp" />

    <EditText
        android:id="@+id/updatedes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Update Description"
        android:inputType="text"
        android:textColor="#0D0000"
        android:textColorHint="#0D0000"
        app:layout_constraintEnd_toEndOf="@+id/updatetitle"
        app:layout_constraintStart_toStartOf="@+id/updatetitle"
        app:layout_constraintTop_toBottomOf="@+id/updatetitle"
        app:layout_goneMarginBaseline="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>